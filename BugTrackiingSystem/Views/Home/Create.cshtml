@model BugTrackiingSystem.Models.Bug

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    hr{
        color:black;
        width:90%;

        /*border:1px solid black;*/
    }
    textarea{
        height:500px;
    }
</style>



<br />
<br />
<form action="/Home/Create" method="post" class="well bg-info">
    <div class="container">
        <h2>Create New Issue</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Tracker" class="form-check-label">Tracker</label>
                    <select class="form-control  " id="Tracker" name="Tracker" data-val="true" data-val-required="This Field Can't Be Blank">
                        <option value="Bug">Bug</option>
                        <option value="Issue">Issue</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Tracker, "", new { @class = "text-danger" })
                    @*<span class="field-validation-valid text-danger" data-valmsg-for="Tracker" data-valmsg-replace="true"></span>*@
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="form-group">
                    <label for="Subject">Subject</label>
                    <input type="text" class="form-control " id="Subject" name="Subject" data-val="true" data-val-required="Please Enter Subject" />
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <label for="Priority">Priority</label>
                <select class="form-control" id="Priority" name="Priority" @*data-valmsg-for="Tracker" data-valmsg-replace="true"*@>
                    <option value="Normal">Normal</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>


                    <option value="High">High</option>
                    <option value="Critical">Critical</option>
                </select>
                @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Assignee">Assignee</label>
                    <select class="form-control" id="Assignee" name="Assignee">

                        <option value="Sudheer">Sudheer</option>
                        <option value="Jyothi">Jyothi</option>
                        <option value="Akash">Akash</option>
                        <option value="Geetha">Geetha</option>


                    </select>
                    @Html.ValidationMessageFor(model => model.Assignee, "", new { @class = "text-danger" })
                    <br />
                    <label for="StartDate">Start Date</label>
                    <input type="date" class="form-control" id="StartDate" name="StartDate"/>
                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                </div>


            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Status">Status</label>
                    <select class="form-control" id="Status" name="Status" @*data-valmsg-for="Tracker" data-valmsg-replace="true"*@>
                        <option value="Created">Created</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Pending">Pending</option>
                        <option value="NotStarted">Not Started</option>
                        <option value="Closed">Closed</option>

                    </select>

                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    <br />
                    <label for="DueDate">Due Date</label>
                    <input type="date" class="form-control" id="DueDate" name="DueDate" @*data-valmsg-for="Tracker" data-valmsg-replace="true"*@ />
                    @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">

                    <label for="Description">Description</label>
                    <textarea cols="300" rows="5" class="form-control" id="Description" name="Description" data-val="true" data-val-required="Please Enter Description" Width="90%"></textarea>

                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="EstimatedTime">Estimated Time</label>
                    <input type="text" class="form-control" placeholder="Hours" id="EstimatedTime" name="EstimatedTime" />
                    @Html.ValidationMessageFor(model => model.EstimatedTime, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="PercentageDone">Percentage Done</label>
                    <select class="form-control" id="PercentageDone" name="PercentageDone">
                        <option value="">0%</option>
                        <option value="25%">25%</option>
                        <option value="35%">35%</option>
                        <option value="45%">45%</option>
                        <option value="55%">55%</option>
                        <option value="65%">65%</option>
                        <option value="75%">75%</option>
                        <option value="85%">85%</option>
                        <option value="95%">95%</option>
                        <option value="100%">100%</option>

                    </select>

                </div>
                @Html.ValidationMessageFor(model => model.PercentageDone, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-4">
                <div class="form-group">
                   
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="/Home/Index" class="btn btn-success">Go to Issue List</a>
                </div>
            </div>
        </div>






    </div>
</form>

